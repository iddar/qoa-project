        "drizzle-orm": "^0.45.1",
        "elysia": "^1.4.22"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@typescript/native-preview": "^7.0.0-dev.20260205.1",
        "drizzle-kit": "^0.31.8",
        "oxfmt": "^0.28.0",
        "oxlint": "^1.43.0",
        "oxlint-tsgolint": "^0.11.4"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "packageManager": "bun@1.3.8"
