# App runtime
PORT=3000
NODE_ENV=development
JWT_SECRET=dev-secret
AUTH_ACCESS_TTL_SECONDS=900
AUTH_REFRESH_TTL_DAYS=30
AUTH_DEV_MODE=true

# Postgres (Docker Compose service, exposed to host)
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432
POSTGRES_DB=qoa_local
POSTGRES_USER=qoa
POSTGRES_PASSWORD=supersecret
DATABASE_URL=postgres://qoa:supersecret@127.0.0.1:5432/qoa_local

# Redis (Docker Compose service, exposed to host)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_URL=redis://127.0.0.1:6379/0
